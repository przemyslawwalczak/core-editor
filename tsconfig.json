{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true,
    },
    "include": [
      "test/**/*"
    ]
  },
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "target": "es6",
    "declaration": true,
    "declarationDir": "types",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": [
    "@types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
